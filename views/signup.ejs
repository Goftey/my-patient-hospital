            <br>
            <label class="lamo" for="email" id="lamoe">Email</label>
            <input class="jennn" type="email" id="emailInput" name="email" placeholder="Enter your Email" value="<%= email %>">
            <br>
            <label class="nare" for="password">Password</label>
            <br>
            <div style="position: relative;">
                <input class="mzsa" type="password" id="passwordInput" name="password" placeholder="Enter your password" value="<%= password %>">
                <i class="fa-regular fa-eye-slash" id="togglePassword" style="position: absolute; right: 10px; top: 10px; cursor: pointer;"></i>
            </div>
            
            <label class="mbuli" for="confirmPassword">Confirm Password</label>
