                <li class="nur">Sign up</li>
            </ul>
        </div>
        <hr class="dan" width="100%" align="left">
        <ul type=none class="errr">
            <% if (typeof errors != 'undefined' && errors.length > 0) { %>
                <% errors.forEach(error => { %>
                    <li><i class="fa-solid fa-triangle-exclamation fa-flip" style="color: #1e3152;"></i>&nbsp;<%= error.message %></li>
                <% }) %>
            <% } %>
